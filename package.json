{
  "name": "kafka-order-processing",
  "version": "1.0.0",
  "description": "Kafka-based order processing system with Avro serialization, real-time aggregation, retry logic, and DLQ",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "producer": "ts-node src/producer.ts",
    "consumer": "ts-node src/consumer.ts",
    "dev:producer": "nodemon --exec ts-node src/producer.ts",
    "dev:consumer": "nodemon --exec ts-node src/consumer.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "kafka",
    "avro",
    "nodejs",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "kafkajs": "^2.2.4",
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "avsc": "^5.7.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2"
  }
}
